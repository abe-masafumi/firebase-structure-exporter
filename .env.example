# Firestore project ID (e.g. my-firebase-project)
FIRESTORE_PROJECT_ID=

# Path to the service account JSON used to authenticate with Firestore.
# Relative paths are resolved from the project root.
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Optional: where to store the exported JSON (defaults to output/firestore_structure.json)
OUTPUT_FILE=output/firestore_structure.json

# Optional: limit the number of latest documents sampled per collection (defaults to 100)
SAMPLE_DOCUMENT_LIMIT=100

# Optional: field used to sort documents when sampling (defaults to __name__)
SAMPLE_ORDER_FIELD=__name__
